<link rel="stylesheet" href="<%=locals.assetPath('sign_styles.css', 'css')%>" />

<div class="container">
  <div class="local-google-container">
    <form action="/users/create-session" method="post" class="signup-form">
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter Email"
        required
      />
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Enter Password"
        required
      />
      <input type="submit" id="submit-btn" value="Login" />
    </form>
    <hr/>
    <a href="/users/auth/google"><img src="<%=locals.assetPath('google-logo.png', 'images')%>" alt=""> Sign In / Sign Up</a>
    <a href="/users/reset-pwd">Forget Password ?</a>
  </div>
  <div class="images">
    <figure>
      <img src="<%=locals.assetPath('login.jpg', 'images')%>" alt="signup-img" />
    </figure>
  </div>
</div>
